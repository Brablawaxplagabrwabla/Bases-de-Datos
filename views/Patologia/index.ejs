<html lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0"/>
  <title></title>

  <!-- CSS  -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
  <!-- FIN CSS -->
</head>
<body>


<!-- LISTA DE PACIENTES -->
<div  class="container">
  <div class="section">
    <div class="row">
      <br><br>
      <h4 class="col s12 light center">Lista de Patologías</h4>

      <table class="highlight centered">

        <thead>
        <tr>
          <th class="teal-text text-accent-4">Nombre</th>
          <th class="teal-text text-accent-4">Descripción</th>
          <th class="teal-text text-accent-4">Transmisión</th>
          <th class="teal-text text-accent-4">Patogénesis</th>
        </tr>
        </thead>
        <tbody>
        <% _.each(patologia, function (patologia){ %>
        <tr data-id="<%= patologia.id %>" data-model="paciente" >
          <!-- NOMBRE -->
          <td><%= patologia.nombre %></td>
          <!-- APELLIDO -->
          <td><%= patologia.descripcion %></td>
          <!-- SEXO -->
          <td><%= patologia.transmision %></td>
          <!-- CEDULA -->
          <td><%= patologia.patogenesis %></td>
          <td>
            <a href="/Patologia/editar/<%= patologia.id %>" class="material-icons teal-text text-accent-4">add_circle</a>
            <a href="/Patologia/delete/<%= patologia.id %>" class="material-icons teal-text text-accent-4">delete</a>
          </td>
        </tr>
        </tbody>
        <% }) %>
      </table>
    </div>
    <div class="row">

      <div class="col s12 m3 l3">
        <a href="/Patologia/nuevo/" class="btn waves-effect waves-light teal accent-4" type="submit" name="action">Nueva Patología</a>
      </div>
      <div class="col s12 m3 l3">
        <a href="/Patologia/frecuencia/" class="btn waves-effect waves-light teal accent-4" type="submit" name="action">Ver frecuencias de aparición</a>
      </div>

    </div>

  </div>
  <br><br>
</div>
<!-- FIN LISTA DE PACIENTES -->


<!--  Scripts-->
<script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
<script>
  $(document).ready(function(){
    $('.parallax').parallax();
  });
</script>



</body>
</html>

