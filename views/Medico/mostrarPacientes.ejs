<html lang="en">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0"/>
  <title></title>

  <!-- CSS  -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
  <!-- FIN CSS -->
</head>
<body>

<!-- LISTA DE PACIENTES -->
<div class="container">
  <div class="section">
    <div class="row">
      <br><br>
      <h4 class="col s12 light center">Lista de Pacientes</h4>

      <table class="highlight centered">

        <thead>
        <tr>
          <th class="teal-text text-accent-4">Nombre</th>
          <th class="teal-text text-accent-4">Apellido</th>
          <th class="teal-text text-accent-4">Sexo</th>
          <th class="teal-text text-accent-4">Cédula</th>
          <th class="teal-text text-accent-4">Correo Electrónico</th>
          <th class="teal-text text-accent-4">Opciones de Historia</th>
        </tr>
        </thead>
        <tbody>
        <% _.each(paciente, function (paciente){ %>
        <tr data-id="<%= paciente.id %>" data-model="paciente" >
          <!-- NOMBRE -->
          <td><%= paciente.Nombre %></td>
          <!-- APELLIDO -->
          <td><%= paciente.Apellido %></td>
          <!-- SEXO -->
          <td><%= paciente.Sexo %></td>
          <!-- CEDULA -->
          <td><%= paciente.Cedula %></td>
          <!-- CORREO ELECTRONICO -->
          <td><%= paciente.Correo %></td>
          <td>
            <a href="/Paciente/editar/<%= paciente.idPaciente %>" class="material-icons teal-text text-accent-4">add_circle</a>
            <a href="/Paciente/show/<%= paciente.idPaciente %>+<%= medico.id %>" class="material-icons teal-text text-accent-4">remove_red_eye</a>
            <a href="/Paciente/delete/<%= paciente.idPaciente %>" class="material-icons teal-text text-accent-4">delete</a>
          </td>
        </tr>
        </tbody>
        <% }) %>
      </table>
    </div>
    <div class="row">
      <div class="col s12 m12 l12 center">
        <a href="/Paciente/nuevo/<%= medico.id %>" class="btn waves-effect waves-light teal accent-4" type="submit" name="action">Nuevo Paciente</a>
        <a href="/Patologia/index/" class="btn waves-effect waves-light teal accent-4" type="submit" name="action">Lista de Patologías</a>
      </div>

    </div>

  </div>
  <br><br>
</div>
<!-- FIN LISTA DE PACIENTES -->

<!--  Scripts-->
<script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<!-- Compiled and minified JavaScript -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
<script>
  $(document).ready(function(){
    $('.parallax').parallax();
  });
</script>



</body>
</html>

